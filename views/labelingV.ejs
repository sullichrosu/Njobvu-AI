                                <%} else {%>
                                <td></td>
                                <%}%>
                                <td class="text-right"><a class="btn btn-primary pass-class" href="/labelingV?IDX=<%= IDX %>&IName=<%= images[i].IName %>&curr_class=<%= curr_class %>&sort=null&class=null&classFilter=<%= classFilter %>" role="button">Label</a></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
